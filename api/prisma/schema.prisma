datasource sqlite {
  provider = "sqlite"
  url      = env("DB_HOST")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

model Invoice {
  id            Int      @id @default(autoincrement())
  invoiceNumber String
  date          String
  body          String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}